<main class="content">
	<div class="container-fluid p-0">

		<h1 class="h1 mb-5">Items</h1>

		<h3 class="mb-5">Prix moyen: <%= number_to_currency(Item.average_price) %></h3>

		<div class="row">
			<div class="col-12">

				<div class="card">
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
								<tr>
									<th>Item</th>
									<th>Categorie</th>
									<th>Prix de d√©part</th>
									<th>Pourcentage de remise</th>
									<th>Prix</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
							  <% @items.each do |item| %>
							  	<%=form_for item, :url => administration_item_path(item.id), :html => { :method => :put} do |f|%>
							  		<tr>
							  			<td><%= item.name %></td>
							  			<td><%= item.category.name %></td>
							  			<td><%= number_to_currency(item.original_price)%></td>
							  			<td><%= f.number_field :discount_percentage %></td>
							  			<td><%= number_to_currency(item.price)%></td>
							  			<td><%= f.submit "Modifier" %></td>
							  		</tr>
							  	<% end %>
							  <% end %>
							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>

	</div>
</main>
